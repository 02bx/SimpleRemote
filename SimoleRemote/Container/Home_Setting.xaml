                    <ComboBoxItem Content="从此计算机进行录制"/>
                    <ComboBoxItem Content="不录制"/>
                </ComboBox>
                <TextBlock Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Text="组合键：" FontSize="14" VerticalAlignment="Center" />
